{
  "compilerOptions": {
    "target": "ES6",                     
    "module": "CommonJS",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "declaration": true,                 
    "sourceMap": true                    
  },
  "include": [
    "./src/**/*.ts"                     
  ],
  "exclude": [
    "node_modules"                      
  ]
}
